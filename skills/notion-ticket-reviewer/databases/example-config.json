{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Example Bug Report database configuration. Copy and customize for your project.",

  "id": "[YOUR_DATABASE_ID]",
  "name": "Bug Report",
  "description": "Track bugs, issues, and feature requests",

  "properties": {
    "title": "Title",
    "status": "Status",
    "priority": "Priority",
    "type": "Type",
    "app": "App / Dashboard",
    "pages": "Pages",
    "description": "Description",
    "devComment": "Dev's Comment",
    "reportedBy": "Reported by",
    "doneBy": "Done by",
    "responsibleFor": "Responsible for",
    "difficulty": "Difficulty",
    "attachments": "Image, Video",
    "dueDate": "Due Date",
    "createdTime": "Created time"
  },

  "statusValues": {
    "todo": "New",
    "inProgress": "Fixing",
    "review": "Resolved",
    "done": "Closed",
    "blocked": "Won't Fix"
  },

  "priorityValues": ["Critical", "Urgent", "High", "Medium", "Low"],

  "typeValues": ["Bug", "Feature", "Improvement", "Task"],

  "appValues": ["APP", "Dashboard", "Admin", "Web"],

  "workflowMapping": {
    "start": "Fixing",
    "complete": "Resolved",
    "verify": "Closed",
    "block": "Won't Fix"
  },

  "commentTemplate": "Fix implemented:\n- Files modified: {files}\n- Changes: {changes}\n- Pages affected: {pages}\n- Ready for QA"
}
