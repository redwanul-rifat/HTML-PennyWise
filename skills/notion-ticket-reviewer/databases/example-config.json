  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Example database configuration. Copy and customize for your database.",

  "id": "YOUR_DATABASE_ID_HERE",
  "name": "Your Database Name",
  "description": "Description of your ticket database",

  "properties": {
    "title": "Title",
    "status": "Status",
    "priority": "Priority",
    "team": "Team",
    "assignee": "Assignee",
    "description": "Description"
