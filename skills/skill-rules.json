{
  "version": "1.0",
  "description": "Base skill triggers - shared across all projects using this as .claude submodule",
  "skills": {
    "skill-developer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": ["create skill", "new skill", "skill development", "skill-rules", "build skill"],
        "intentPatterns": [
          "(create|build|add|develop).*skill",
          "skill.*?(template|structure|format)"
        ]
      }
    },
    "generate-ppt": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": ["presentation", "ppt", "powerpoint", "slides", "reveal.js", "townhall", "deck", "generate-ppt"],
        "intentPatterns": [
          "(create|generate|build|make).*?(presentation|slides|deck|ppt)",
          "(html|reveal).*?presentation",
          "brand.*?(presentation|slides)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "presentations/**/*.html",
          "presentations/**/*.md",
          ".claude/**/reveal*.html"
        ]
      }
    },
    "notion-ticket-reviewer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": ["notion ticket", "review ticket", "notion task", "ticket reviewer", "notion database", "notion review", "fix ticket"],
        "intentPatterns": [
          "(review|fix|complete|process).*?(notion|ticket)",
          "(fetch|get|list|query).*?(notion|ticket|task)",
          "notion.*?(review|update|status)",
          "fix ticket:?\\s*",
          "fix next ticket"
        ]
      },
      "commands": [
        "fix-ticket"
      ]
    },
    "fullstack": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": ["deployment", "project setup", "project init", "iteration manager", "fullstack project"],
        "intentPatterns": [
          "(deploy|setup|init|initialize).*?project",
          "(start|create).*?fullstack",
          "iteration.*?(manager|planning)"
        ]
      }
    },
    "e2e-testing": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": ["e2e test", "playwright", "test fixtures", "page objects", "end to end", "e2e fixtures"],
        "intentPatterns": [
          "(create|add|write|generate).*?e2e.*?test",
          "(playwright|e2e).*?(fixture|page.*object)",
          "test.*?(fixture|page.*object)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/test/**/*.spec.ts",
          "**/e2e/**/*.ts",
          "**/playwright/**/*.ts"
        ]
      }
    },
    "git-workflow": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": ["create pr", "pull request", "dev branch", "push to dev", "pr to dev"],
        "intentPatterns": [
          "(create|make|open).*?pr",
          "(push|submit).*?dev",
          "pull.*?request.*?dev"
        ]
      }
    },
    "debugging": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": ["fix bug", "debug", "react error", "frontend bug", "typescript error", "runtime error"],
        "intentPatterns": [
          "(fix|debug|solve|resolve).*?bug",
          "(react|frontend|typescript).*?error",
          "troubleshoot.*?(issue|problem|error)"
        ]
      }
    },
    "code-quality": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "low",
      "promptTriggers": {
        "keywords": ["organize types", "typescript types", "type organization", "refactor types", "centralize types"],
        "intentPatterns": [
          "(organize|clean|refactor|centralize).*?types",
          "type.*?(organization|structure|cleanup)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/types/**/*.ts",
          "**/types/**/*.d.ts"
        ]
      }
    }
  }
}
